                <hc:TabItem Header="StepBar 步骤条">
                    <Grid Margin="32">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <hc:StepBar Grid.ColumnSpan="2"
                                    StepIndex="{Binding StepIndex}">
                            <hc:StepBarItem Content="Register" />
                            <hc:StepBarItem Content="BasicInfo" />
                            <hc:StepBarItem Content="UploadFile" />
                            <hc:StepBarItem Content="Complete" />
                        </hc:StepBar>
                        <StackPanel Margin="0,32"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Center">
                            <Button  Command="{Binding PrevCmd}"
                                     CommandParameter="{Binding ElementName=PanelMain}"
                                     Width="180"
                                     Content="Prev"
                                     Style="{StaticResource ButtonPrimary}" />
                            <Button Command="{Binding NextCmd}"
                                    CommandParameter="{Binding ElementName=PanelMain}"
                                    Width="180"
                                    Margin="0,16,0,0"
                                    Content="Next"
                                    Style="{StaticResource ButtonPrimary}" />
                        </StackPanel>
                        <hc:StepBar Margin="0,0,0,32"
                                    Grid.Column="0"
                                    Grid.Row="2"
                                    Grid.ColumnSpan="2"
                                    Dock="Bottom">
                            <hc:StepBarItem Content="Register" />
                            <hc:StepBarItem Content="BasicInfo" />
                            <hc:StepBarItem Content="UploadFile" />
                            <hc:StepBarItem Content="Complete" />
                        </hc:StepBar>
                        <hc:StepBar Grid.Column="0"
                                    Grid.Row="3"
                                    ItemsSource="{Binding DataList}"
                                    Dock="Left">
                            <hc:StepBar.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Left">
                        <Run Text="Header" />
                        <Run Text="{Binding Index,RelativeSource={RelativeSource AncestorType=hc:StepBarItem}}" /></TextBlock>
                                        <TextBlock Margin="0,4,0,0"
                                                   Text="Content" />
                                    </StackPanel>
                                </DataTemplate>
                            </hc:StepBar.ItemTemplate>
                        </hc:StepBar>
                        <hc:StepBar Grid.Column="1"
                                    Grid.Row="3"
                                    ItemsSource="{Binding DataList}"
                                    Dock="Right">
                            <hc:StepBar.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Left">
                        <Run Text="Header" />
                        <Run Text="{Binding Index,RelativeSource={RelativeSource AncestorType=hc:StepBarItem}}" /></TextBlock>
                                        <TextBlock Margin="0,4,0,0"
                                                   Text="Content" />
                                    </StackPanel>
                                </DataTemplate>
                            </hc:StepBar.ItemTemplate>
                        </hc:StepBar>
                    </Grid>
                </hc:TabItem>
                <hc:TabItem Header="Transfer 穿梭框">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <hc:Transfer ItemsSource="{Binding Dic}"
                                     Margin="32"
                                     Height="300">
                            <hc:Transfer.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Key}" />
                                        <TextBlock Text="{Binding Value }" />
                                    </StackPanel>
                                </DataTemplate>
                            </hc:Transfer.ItemTemplate>
                        </hc:Transfer>
                    </StackPanel>
                </hc:TabItem>
                <hc:TabItem Header="WaveProgressBar 波形进度条">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,32,0,0">
                            <hc:WaveProgressBar Value="20" />
                            <hc:WaveProgressBar ShowText="True"
                                                Value="70"
                                                FontSize="20"
                                                Margin="16,0,0,0"
                                                WaveThickness="4"
                                                WaveStroke="#FFFF0080">
                                <hc:WaveProgressBar.WaveFill>
                                    <LinearGradientBrush EndPoint="0,1"
                                                         StartPoint="0,0">
                                        <GradientStop Color="#66FF0080"
                                                      Offset="0" />
                                        <GradientStop Color="#FFFF0080"
                                                      Offset="1" />
                                    </LinearGradientBrush>
                                </hc:WaveProgressBar.WaveFill>
                            </hc:WaveProgressBar>
                            <hc:WaveProgressBar Value="40"
                                                Margin="16,0,0,0"
                                                ShowText="False"
                                                Width="50"
                                                Height="50"
                                                Style="{StaticResource ProgressBarWarningWave}" />
                        </StackPanel>
                    </StackPanel>
                </hc:TabItem>
                <hc:TabItem Header="BorderClip">
                    <Border Style="{StaticResource BorderClip}"
                            Width="300"
                            Height="300">
                        <Image Source="/Resources/Naruto0.jpg" />
                    </Border>
                </hc:TabItem>
                <hc:TabItem Header="DataGrid 数据表格">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <DataGrid HeadersVisibility="All"
                                  RowHeaderWidth="60"
                                  AutoGenerateColumns="False"
                                  ItemsSource="{Binding DataList}">
                            <DataGrid.RowHeaderTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected,RelativeSource={RelativeSource AncestorType=DataGridRow}}" />
                                </DataTemplate>
                            </DataGrid.RowHeaderTemplate>
                            <DataGrid.Columns>
                                <DataGridTextColumn IsReadOnly="True"
                                                    Width="80"
                                                    CanUserResize="False"
                                                    Binding="{Binding Index}"
                                                    Header="Test" />
                                <DataGridTemplateColumn Width="60"
                                                        CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding ImgPath}"
                                                   Width="32"
                                                   Height="32"
                                                   Stretch="Uniform" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="1"
                                                    Binding="{Binding Name}"
                                                    Header="Name" />
                                <DataGridCheckBoxColumn Width="100"
                                                        CanUserResize="False"
                                                        Binding="{Binding IsSelected}"
                                                        Header="Selected" />
                                <DataGridComboBoxColumn Width="100"
                                                        CanUserResize="False"
                                                        SelectedValueBinding="{Binding Type}"
                                                        Header="Type" />
                                <DataGridTextColumn Width="1"
                                                    Binding="{Binding Remark}"
                                                    Header="Remark" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </hc:TabItem>
                <hc:TabItem Header="TabControlInLine : TabControlBaseStyle">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TabControl Margin="10"
                                    Style="{StaticResource TabControlInLine}">
                            <TabItem Header="选项卡1"></TabItem>
                            <TabItem Header="选项卡2"></TabItem>
                            <TabItem Header="选项卡3"></TabItem>
                        </TabControl>
                    </StackPanel>
                </hc:TabItem>
                <hc:TabItem Header="IconFont">
                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <!--<TextBlock Text="&#xe617;"
								   Style="{StaticResource FIcon }"
								   Foreground="Black" />
						<TextBlock Text="&#xe617;"
								   Style="{StaticResource FIcon }"
								   Foreground="Green" />
						<TextBlock Text="&#xe617;"
								   FontSize="50"
								   FontFamily="/Resources/#iconfont"
								   Foreground="Red" />-->
                    </StackPanel>
                </hc:TabItem>
                <hc:TabItem Header="其他">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="SliderDemo"
                                VerticalAlignment="Center"
                                Width="400"
                                Value="40"
                                Maximum="100" />
                        <StackPanel Grid.Column="1"
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    Margin="0,32,0,0">
                            <hc:WaveProgressBar Value="{Binding Value,ElementName=SliderDemo}"
                                                Background="YellowGreen" />
                            <hc:WaveProgressBar Value="{Binding Value,ElementName=SliderDemo}"
                                                FontSize="20"
                                                Margin="16,0,0,0"
                                                WaveThickness="4"
                                                WaveStroke="#FFFF0080">
                                <hc:WaveProgressBar.WaveFill>
                                    <LinearGradientBrush EndPoint="0,1"
                                                         StartPoint="0,0">
                                        <GradientStop Color="#66FF0080"
                                                      Offset="0" />
                                        <GradientStop Color="#FFFF0080"
                                                      Offset="1" />
                                    </LinearGradientBrush>
                                </hc:WaveProgressBar.WaveFill>
                            </hc:WaveProgressBar>
                            <hc:WaveProgressBar Value="{Binding Value,ElementName=SliderDemo}"
                                                Margin="16,0,0,0"
                                                ShowText="False"
                                                Width="50"
                                                Height="50"
                                                Style="{StaticResource ProgressBarWarningWave}" />
                        </StackPanel>
                        <hc:Watermark Grid.Column="2"
                                      Grid.Row="0"
                                      Mark="WP"
                                      MarkBrush="Yellow"
                                      Angle="30"
                                      FontSize="30"
                                      FontWeight="Bold"
                                      Opacity="0.3"
                                      MarkMargin="30,0" />
                        <hc:WaveProgressBar Grid.Column="2"
                                            Grid.Row="0"
                                            Value="{Binding Value,ElementName=SliderDemo}"
                                            FontSize="20"
                                            Margin="16,0,0,0"
                                            WaveThickness="4"
                                            WaveStroke="#FFFF0080">
                            <hc:WaveProgressBar.WaveFill>
                                <LinearGradientBrush EndPoint="0,1"
                                                     StartPoint="0,0">
                                    <GradientStop Color="#66FF0080"
                                                  Offset="0" />
                                    <GradientStop Color="#FFFF0080"
                                                  Offset="1" />
                                </LinearGradientBrush>
                            </hc:WaveProgressBar.WaveFill>
                        </hc:WaveProgressBar>
                        <!--<hc:TagPanel AddTagButtonClick
                                     Margin="32"
                                     Orientation="Horizontal"
                                     MaxWidth="400"
                                     VerticalAlignment="Center"
                                     ShowAddButton="True"></hc:TagPanel>-->
                    </Grid>
                </hc:TabItem>
                <hc:TabItem Header="Shield">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"></StackPanel>
                </hc:TabItem>
            </hc:TabControl>
        </Grid>
        <hc:Drawer Name="DrawerLeft"
