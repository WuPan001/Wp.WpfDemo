<Window x:Class="Wp.WpfDemo.UIL.TestHandyControl.Views.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Wp.WpfDemo.UIL.TestHandyControl.Views.Windows"
        mc:Ignorable="d"
        Title="Window1"
        Height="1080"
        Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/FlipClock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid>
            <!--<hc:AnimationPath Data="{DynamicResource GithubGeometry}"
						  Duration="00:00:05"
						  Stretch="Uniform"
						  StrokeThickness="1"
						  Stroke="Black"></hc:AnimationPath>-->
            <!--<Path  Style="{StaticResource TestPath}"   Fill="White" />-->
            <!--<svgc:SvgViewbox IsHitTestVisible="False"
						 Source="/Resources/Trace.svg" />-->
            <hc:TabControl IsAnimationEnabled="True"
                           ShowCloseButton="False"
                           IsDraggable="True"
                           IsTabFillEnabled="False"
                           IsScrollable="True"
                           ShowScrollButton="False"
                           ShowOverflowButton="False">
                <hc:TabItem IsSelected="True"
                            Header="AnimationPath 动画路径">
                    <!--GithubGeometry-->
                    <StackPanel Orientation="Horizontal">
                        <hc:AnimationPath Data="{DynamicResource GithubGeometry}"
                                          Width="200"
                                          Duration="00:00:05"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          StrokeThickness="1"
                                          Stroke="Black"
                                          IsPlaying="True"
                                          Completed="AnimationPath_Completed" />
                        <!--<hc:GeometryAnimation  From="{StaticResource GithubGeometry}"
                                               To="{StaticResource CalendarGeometry}" />-->
                        <hc:CoverFlow x:Name="CoverFlowMain"
                                      Loop="True"
                                      Margin="32"
                                      Width="500"
                                      Height="300" />
                        <UniformGrid Columns="3"
                                     Margin="16">
                            <hc:ImageSelector Width="100"
                                              Height="100"
                                              Margin="16" />
                            <hc:ImageSelector Width="100"
                                              Height="100"
                                              Margin="16"
                                              hc:BorderElement.CornerRadius="50" />
                            <hc:ImageSelector Width="100"
                                              Height="100"
                                              Margin="16"
                                              hc:BorderElement.CornerRadius="50"
                                              StrokeDashArray="10,5" />
                            <hc:ImageSelector Width="100"
                                              Height="100"
                                              Margin="16"
                                              hc:BorderElement.CornerRadius="50"
                                              BorderBrush="{DynamicResource SuccessBrush}" />
                            <hc:ImageSelector Width="100"
                                              Height="100"
                                              Margin="16"
                                              hc:BorderElement.CornerRadius="50"
                                              StrokeDashArray="10,5,10"
                                              BorderBrush="{DynamicResource DangerBrush}" />
                            <hc:ImageSelector Width="100"
                                              Height="100"
                                              Margin="16"
                                              hc:BorderElement.CornerRadius="10"
                                              StrokeThickness="2"
                                              BorderThickness="2"
                                              BorderBrush="{DynamicResource PrimaryBrush}" />
                        </UniformGrid>
                        <StackPanel Orientation="Vertical">
                            <hc:ImageViewer Background="{DynamicResource SecondaryRegionBrush}"
                                            Width="600"
                                            Height="330"
                                            ImageSource="/Resources/Naruto0.jpg" />
                            <Image Width="650"
                                   Source="/Resources/Naruto0.jpg"
                                   Stretch="Uniform">
                                <hc:Magnifier.Instance>
                                    <hc:Magnifier Scale="6"
                                                  HorizontalOffset="-16"
                                                  VerticalOffset="-16" />
                                </hc:Magnifier.Instance>
                            </Image>
                            <StackPanel Margin="32"
                                        VerticalAlignment="Center"
                                        hc:PinBox.Completed="StackPanel_Completed">
                                <hc:PinBox Length="4"
                                           Password="1234" />
                                <hc:PinBox Length="6"
                                           Password="123456"
                                           Margin="0,16,0,0"
                                           PasswordChar="❤" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </hc:TabItem>
                <hc:TabItem Header="Carousel 轮播">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}">
                        <!--显示填充轮播项-->
                        <hc:Carousel Margin="32"
                                     IsCenter="True"
                                     AutoRun="True"
                                     Width="600"
                                     Height="330"
                                     VerticalAlignment="Center">
                            <Image Width="600"
                                   Stretch="UniformToFill"
                                   Source="/Resources/Naruto0.jpg" />
                            <Image Width="600"
                                   Stretch="UniformToFill"
                                   Source="/Resources/Naruto1.jpg" />
                            <hc:SimplePanel Width="600">
                                <Image Stretch="UniformToFill"
                                       Source="/Resources/Naruto2.jpg" />
                                <TextBlock Text="Demo Text"
                                           Style="{StaticResource TextBlockDefault}"
                                           FontSize="100"
                                           FontWeight="Bold"
                                           Foreground="White" />
                            </hc:SimplePanel>
                            <Image Width="600"
                                   Stretch="UniformToFill"
                                   Source="/Resources/Naruto3.jpg" />
                            <Image Width="600"
                                   Stretch="UniformToFill"
                                   Source="/Resources/Naruto4.jpg" />
                        </hc:Carousel>
                        <!--<hc:Carousel AutoRun="True"  使用绑定生成轮播项
								 ItemsSource="{Binding Images}"
								 Width="300"
								 Height="200">
						<hc:Carousel.ItemTemplate>
							<DataTemplate>
								<Image Source="{Binding}"
									   Width="300" />
							</DataTemplate>
						</hc:Carousel.ItemTemplate>
					</hc:Carousel>-->
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="FlipClock 翻页时钟">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}">
                        <hc:FlipClock Style="{StaticResource WpFilpClock}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="32" />
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="Rate 评分">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}">
                        <StackPanel Width="170">
                            <hc:Rate Value="2" />
                            <hc:Rate Value="5"
                                     Count="6"
                                     Margin="0,16,0,0"
                                     Foreground="{DynamicResource SuccessBrush}" />
                            <hc:Rate DefaultValue="3"
                                     IsReadOnly="True"
                                     AllowHalf="True"
                                     Margin="0,16,0,0"
                                     Foreground="{DynamicResource WarningBrush}" />
                            <hc:Rate DefaultValue="1"
                                     AllowClear="False"
                                     AllowHalf="True"
                                     Margin="0,16,0,0"
                                     Foreground="{DynamicResource DangerBrush}"
                                     Icon="{StaticResource GithubGeometry }" />
                            <hc:Rate Value="3.5"
                                     AllowHalf="True"
                                     ShowText="True"
                                     Margin="0,16,0,0"
                                     Foreground="{DynamicResource DangerBrush}"
                                     Icon="{StaticResource GithubGeometry}" />
                        </StackPanel>
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="CircleProgressBar 圆形进度条">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,32,0,0">
                            <hc:CircleProgressBar Value="20" />
                            <hc:CircleProgressBar Value="30"
                                                  FontSize="30"
                                                  Margin="16,0,0,0" />
                            <hc:CircleProgressBar Value="40"
                                                  Margin="16,0,0,0"
                                                  ShowText="False"
                                                  Width="20"
                                                  Height="20"
                                                  ArcThickness="2"
                                                  Style="{StaticResource ProgressBarSuccessCircle}" />
                            <hc:CircleProgressBar Value="50"
                                                  Margin="16,0,0,0"
                                                  ShowText="False"
                                                  Width="30"
                                                  Height="30"
                                                  ArcThickness="6"
                                                  Style="{StaticResource ProgressBarInfoCircle}" />
                            <hc:CircleProgressBar Value="60"
                                                  Margin="16,0,0,0"
                                                  ShowText="False"
                                                  Width="40"
                                                  Height="40"
                                                  ArcThickness="10"
                                                  Style="{StaticResource ProgressBarWarningCircle}" />
                            <hc:CircleProgressBar Value="70"
                                                  Margin="16,0,0,0"
                                                  Width="50"
                                                  Height="50"
                                                  Style="{StaticResource ProgressBarDangerCircle}" />
                        </StackPanel>
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="Clock 时钟">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}">
                        <!--<hc:Clock SelectedTime="{x:Static system:DateTime.Now}" />-->
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="ScrollViewer 滚动视图">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border BorderThickness="1"
                                    BorderBrush="{DynamicResource BorderBrush}">
                                <hc:ScrollViewer Orientation="Horizontal"
                                                 HorizontalScrollBarVisibility="Auto"
                                                 VerticalScrollBarVisibility="Hidden"
                                                 IsInertiaEnabled="True"></hc:ScrollViewer>
                            </Border>
                        </Grid>
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="Drawer 抽屉">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ToggleButton Margin="10"
                                      HorizontalAlignment="Stretch"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      Content="Left"
                                      IsChecked="{Binding IsOpen,ElementName=DrawerLeft}" />
                        <ToggleButton Margin="10"
                                      HorizontalAlignment="Stretch"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Content="Top"
                                      IsChecked="{Binding IsOpen,ElementName=DrawerTop}" />
                        <ToggleButton Margin="10"
                                      HorizontalAlignment="Stretch"
                                      Grid.Row="1"
                                      Grid.Column="2"
                                      Content="Right"
                                      IsChecked="{Binding IsOpen,ElementName=DrawerRight}" />
                        <ToggleButton Margin="10"
                                      HorizontalAlignment="Stretch"
                                      Grid.Row="2"
                                      Grid.Column="1"
                                      Content="Bottom"
                                      IsChecked="{Binding IsOpen,ElementName=DrawerBottom}" />
                    </Grid>
                </hc:TabItem>
                <hc:TabItem Header="GotoTop 回到顶部">
                    <hc:SimplePanel Width="500"
                                    Height="350">
                        <hc:ScrollViewer Name="ScrollViewerDemo"
                                         IsInertiaEnabled="True"
                                         Margin="0,10,0,0">
                            <Border Height="2000"
                                    Margin="8,0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1"
                                                         StartPoint="0.5,0">
                                        <GradientStop Color="White"
                                                      Offset="0" />
                                        <GradientStop Color="Black"
                                                      Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </hc:ScrollViewer>
                        <hc:GotoTop Animated="True"
                                    AutoHiding="True"
                                    AnimationTime="500"
                                    Target="{Binding ElementName=ScrollViewerDemo}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom" />
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="Grid 栅格">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}"></hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="ImageBrowser 图片浏览器">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}">
                        <!--<hc:ImageBrowser  ="/Resources/Naruto0.jpg" />-->
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="Pagination 页码条">
                    <hc:SimplePanel Background="{DynamicResource RegionBrush}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                        <hc:Pagination MaxPageCount="10"
                                       PageIndex="5"
                                       IsJumpEnabled="True" />
                    </hc:SimplePanel>
                </hc:TabItem>
                <hc:TabItem Header="Shield 徽章">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <hc:Shield Subject=".net"
                                   Status=">=4.0"
                                   Color="#1182c3" />
                        <hc:Shield Subject="c#"
                                   Status="7.0"
                                   Margin="4,0,0,0"
                                   Color="#1182c3" />
